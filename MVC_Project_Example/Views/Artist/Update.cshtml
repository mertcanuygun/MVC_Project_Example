@model MVC_Project_Example.Models.DTO.ArtistUpdateDTO
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="container mt-3">
    <div class="row">
        <div class="col-sm-6">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Artist Update</h3>
                </div>
                <form method="post" action="/Artist/Update">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="card-body">
                        <div class="form-group">
                            <label>FirstName</label>
                            <input type="text" name="FirstName" value="@Model.FirstName" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>LastName</label>
                            <input type="text" name="LastName" value="@Model.LastName" class="form-control">
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary float-right">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

