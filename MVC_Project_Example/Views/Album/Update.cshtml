@model MVC_Project_Example.Models.DTO.AlbumUpdateDTO
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="container mt-3">
    <div class="row">
        <div class="col-sm-6">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Album Update</h3>
                </div>
                <form method="post" action="/Album/Update">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="card-body">
                        <div class="form-group">
                            <label>Title</label>
                            <input type="text" name="Name" value="@Model.Name" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Total Track Number</label>
                            <input type="number" name="TotalTrack" value="@Model.TotalTrack" class="form-control">
                        </div>
                        <label>Choose Artist</label>
                        <select name="ArtistId" class="form-control">
                            @foreach (var item in Model.Artists)
                            {
                                <option value="@item.Id">@item.FirstName @item.LastName</option>
                            }
                        </select>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary float-right">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


